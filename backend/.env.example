# Database
DATABASE_URL=sqlite:///./rscoutx.db

# API
API_V1_PREFIX=/api
PROJECT_NAME=RscoutX API
VERSION=1.0.0

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000","http://127.0.0.1:8000"]

# LLM Providers
LLM_PROVIDER=openai  # openai or ollama
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Scraper
SCRAPER_CACHE_MINUTES=30
SCRAPER_TIMEOUT_SECONDS=30
SCRAPER_MAX_RETRIES=3

# Path Rendering
MAP_IMAGE_PATH=../pushback_map.png
DEFAULT_MAP_WIDTH=3600
DEFAULT_MAP_HEIGHT=3600
FIELD_WIDTH_MM=3600
FIELD_HEIGHT_MM=3600

# SSL (for start.bat with port 443)
SSL_CERTFILE=
SSL_KEYFILE=
